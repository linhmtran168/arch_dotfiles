URxvt.depth:32
URxvt.geometry:90x30
URxvt.loginShell:true
! URxvt.transparent:true
! URxvt*tintColor:blue
URxvt*scrollBar:true
URxvt*scrollstyle:plain
!If that color does not work properly, try:
urxvt*background: rgba:1111/1111/1111/dddd

! Cursor
URxvt.cursorBlink:true
URxvt.pointerBlank:true

! Font
URxvt*font: xft:DejaVu Sans Mono:pixelsize=14
! URxvt*letterSpace:-1

URxvt.perl-ext-common:  default,tabbed,keyboard-select,url-select,clipboard

URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

URxvt.keysym.M-u: perl:url-select:select_next

URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-V: perl:clipboard:paste_escaped

! xterm ----------------------------------------------------------------------

xterm*geometry:           80x25
xterm*faceName:           xft:DejaVu Sans Mono:pixelsize=14
!xterm*font:             -*-dina-medium-r-*-*-16-*-*-*-*-*-*-*
xterm*dynamicColors:      true
xterm*background:         black
xterm*foreground:         white
xterm*utf8:               2
xterm*eightBitInput:      true
xterm*saveLines:          512
xterm*scrollTtyKeypress:  true
xterm*scrollTtyOutput:    false
xterm*scrollBar:          true
xterm*rightScrollBar:     true
xterm*jumpScroll:         true
xterm*multiScroll:        true
xterm*toolBar:            false

!! Solarized color
*background: #002b36
*foreground: #657b83
! *fading: 40
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

