URxvt.depth:32
! URxvt.background: black
URxvt.foreground:white
URxvt*tintColor:blue
URxvt*scrollBar:true
URxvt*scrollstyle:plain
!If that color does not work properly, try:
urxvt*background: rgba:1111/1111/1111/dddd

URxvt*font: xft:Bitstream Vera Sans Mono:pixelsize=13

URxvt.perl-ext-common:  default,tabbed,keyboard-select,url-select,clipboard

URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

URxvt.keysym.M-u: perl:url-select:select_next

URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-V: perl:clipboard:paste_escaped

! xterm ----------------------------------------------------------------------

xterm*geometry:           80x25
xterm*faceName:           xft:Bitstream Vera Sans Mono:pixelsize=13
!xterm*font:             -*-dina-medium-r-*-*-16-*-*-*-*-*-*-*
xterm*dynamicColors:      true
xterm*background:         black
xterm*foreground:         white
xterm*utf8:               2
xterm*eightBitInput:      true
xterm*saveLines:          512
xterm*scrollTtyKeypress:  true
xterm*scrollTtyOutput:    false
xterm*scrollBar:          true
xterm*rightScrollBar:     true
xterm*jumpScroll:         true
xterm*multiScroll:        true
xterm*toolBar:            false
